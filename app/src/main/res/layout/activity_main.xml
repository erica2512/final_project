<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_gravity="right"

            android:text="Commal"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25dp">
        </TextView>

        <ImageButton
            android:id="@+id/btn_myPage"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:background="#00ff0000"
            android:src="@drawable/ic_menu01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#AEABAB"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#00ff0000"
                android:drawableTop="@drawable/ic_baseline_edit_note"
                android:text="건강\n기록"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_map"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#00ff0000"
                android:drawableTop="@drawable/ic_iconmonstr_hospital"
                android:text="병원\n찾기"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_weather"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#00ff0000"
                android:drawableTop="@drawable/ic_baseline_wb_sunny_24"
                android:text="산책\n지수"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_pedo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#00ff0000"
                android:drawableTop="@drawable/ic_baseline_run"
                android:text="만보기"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/btn_care"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:paddingTop="5dp"
                android:gravity="center"
                android:background="#00ff0000"
                android:drawableTop="@drawable/ic_iconfinder_cat"
                android:text="케어 가이드"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>